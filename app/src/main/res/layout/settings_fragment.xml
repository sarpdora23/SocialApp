<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="381dp"
                android:layout_height="696dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="35dp"
                android:backgroundTint="@color/main_bg"
                android:backgroundTintMode="src_in"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#283549"
                tools:srcCompat="@drawable/login_const_shape" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="Password:"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <EditText
                android:id="@+id/settings_repassword"
                android:layout_width="213dp"
                android:layout_height="41dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingHorizontal="5dp"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/settings_password"
                app:layout_constraintTop_toBottomOf="@+id/settings_password" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:text="Username:"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/textView12"
                app:layout_constraintTop_toBottomOf="@+id/textView12" />

            <Button
                android:id="@+id/settings_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="44dp"
                android:backgroundTint="@color/button_color"
                android:text="Update ProfIle"
                app:layout_constraintEnd_toEndOf="@+id/settings_repassword"
                app:layout_constraintTop_toBottomOf="@+id/settings_repassword" />

            <EditText
                android:id="@+id/settings_email"
                android:layout_width="213dp"
                android:layout_height="41dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="44dp"
                android:background="@drawable/edittext_shape"
                android:clickable="false"
                android:contextClickable="false"
                android:cursorVisible="false"
                android:editable="false"
                android:ems="10"
                android:enabled="false"
                android:focusable="false"
                android:inputType="textEmailAddress"
                android:linksClickable="false"
                android:longClickable="false"
                android:paddingHorizontal="5dp"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toBottomOf="@+id/settings_profile_image" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="28dp"
                android:text="Email:"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toStartOf="@+id/settings_email"
                app:layout_constraintTop_toBottomOf="@+id/settings_profile_image" />

            <EditText
                android:id="@+id/settings_username"
                android:layout_width="213dp"
                android:layout_height="41dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingHorizontal="5dp"
                android:textColor="#FFFFFF"
                app:layout_constraintStart_toStartOf="@+id/settings_email"
                app:layout_constraintTop_toBottomOf="@+id/settings_email" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile_image"
                android:layout_width="176dp"
                android:layout_height="173dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="80dp"
                app:layout_constraintEnd_toEndOf="@+id/imageView9"
                app:layout_constraintTop_toTopOf="@+id/imageView9"></de.hdodenhof.circleimageview.CircleImageView>

            <EditText
                android:id="@+id/settings_password"
                android:layout_width="213dp"
                android:layout_height="41dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittext_shape"
                android:ems="10"
                android:inputType="textPassword"
                android:paddingHorizontal="5dp"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/settings_username"
                app:layout_constraintTop_toBottomOf="@+id/settings_username" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:text="Re-Password:"
                android:textColor="#FFFFFF"
                app:layout_constraintEnd_toEndOf="@+id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textView14" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>